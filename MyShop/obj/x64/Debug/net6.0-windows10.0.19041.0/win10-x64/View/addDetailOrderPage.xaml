<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="MyShop.View.addDetailOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodel="using:MyShop.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:addDetailOrderViewModel}"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
                     
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border x:ConnectionId='3'
            Margin="20,0,0,0"
            Width="400"
            Height="380"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
            CornerRadius="10"
                                 >
                <StackPanel Margin="20" Orientation="Vertical">
                    <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Order's Information" />
                    <!--  Data is here  -->
                    <Grid x:ConnectionId='7' x:Name="form" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <TextBlock
            Grid.Row="0"
            Margin="0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium"
            Text="Order ID" />
                        <TextBox
            Grid.Row="1"
            Width="450"
            Padding="0,5"
            HorizontalAlignment="Left"
            BorderThickness="0,0,0,1"
            Text="{Binding sohd, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                        <Button Grid.Row="2" Content="Choose product" Margin="0,30">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:ConnectionId='15' Name="Filter"                 />
                                            <Button x:ConnectionId='16'               >Search</Button>
                                        </StackPanel>
                                        <ListBox x:ConnectionId='11' Width="350" x:Name="productListBox">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox x:ConnectionId='13' Content="{Binding tensp }"                                                       Tag="{Binding masp}" IsChecked="{Binding check}"/>
                                                        <Grid Grid.Column="2" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Image Grid.Column="0" Margin="10,0,0,0" Width="20" Source="{Binding anh}" />
                                                            <TextBlock Grid.Column="1" Text="Amount" Margin="30,5,5,0"/>
                                                            <TextBox Grid.Column="3" x:Name="ProductAmount" Text="{Binding sl,Mode=TwoWay}" Height="5" Width="5" />
                                                        </Grid>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>


                    </Grid>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button x:ConnectionId='9'
                        x:Name="AddBtn"
                        Width="100"
                        Height="35"
                        Margin="20,15"
                                             
                        Content="Add"
                        CornerRadius="16" />
                        <Button x:ConnectionId='10'
                        x:Name="Back"
                        Width="100"
                        Height="35"
                        Margin="20,15"
                                            
                        Content="Back"
                        CornerRadius="16" />
                    </StackPanel>
                    <TextBlock x:ConnectionId='8'
                    x:Name="mess"
                    FontSize="15"
                    Foreground="Red"
            
                    TextAlignment="Center" />
                </StackPanel>
            </Border>
            <Border x:ConnectionId='4'
                        Grid.Column="2"
                     
                        Width="400"
                        Height="380"
                        Background="{ThemeResource MyBlockBackgroundThemeBrush}"
                        CornerRadius="10"
                        Margin="0,0,20,0"
                                         >
                <StackPanel Margin="20" Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Product you choose" />
                    <ListBox x:ConnectionId='5' Width="350" x:Name="selectedProductListBox" Grid.Column="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Margin="0,0,10,0" Width="20" Source="{Binding anh}" />
                                    <TextBlock Text="{Binding tensp}" Grid.Column="1"/>
                                    <TextBlock Text="Amount" Grid.Column="2" TextAlignment="Right" Margin="10,0,10,0"/>
                                    <TextBlock Text="{Binding sl, Mode=TwoWay}" Grid.Column="3" TextAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <ProgressBar x:ConnectionId='2' Grid.Row="1" x:Name="loading" Width="500" Background="Transparent"  IsIndeterminate="{Binding isShowProgres}" Height="20" HorizontalAlignment="Center"/>
            <TextBlock
             Text="{Binding mess}"
             FontSize="15"
             Foreground="Red"
             TextAlignment="Center"  />
        </Grid>
    </Grid>
</Page>

