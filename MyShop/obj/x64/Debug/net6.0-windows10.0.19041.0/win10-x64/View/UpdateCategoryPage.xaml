<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="MyShop.View.UpdateCategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
                       >

    <Grid>
        <Border
    Width="500"
    Height="600"
    Background="{ThemeResource MyBlockBackgroundThemeBrush}"
    CornerRadius="10">
            <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="25"
            FontWeight="Bold"
            Text="Category's Information" />
                <!--Data is here-->
                <Grid x:ConnectionId='2' x:Name="form" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                Grid.Row="0"
                Margin="0,10"
                HorizontalAlignment="Left"
                FontWeight="Medium"
                Text="ID Category" />
                    <TextBox
                Grid.Row="1"
                Width="450"
                Padding="0,5"
                HorizontalAlignment="Left"
                BorderThickness="0,0,0,1"
                Text="{Binding maloai , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <TextBlock
                Grid.Row="2"
                Margin="0,10"
                HorizontalAlignment="Left"
                FontWeight="Medium"
                Text="Name Category" />
                    <TextBox
                Grid.Row="3"
                Width="450"
                Padding="0,5"
                HorizontalAlignment="Left"
                BorderThickness="0,0,0,1"
                Text="{Binding tenloai, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </Grid>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='4'
                x:Name="AddBtn"
                Width="100"
                Height="35"
                Margin="20,15"
                Background="{ThemeResource MyForegroundThemeBrush}"
                                    
                Content="Update"
                Foreground="{ThemeResource MyBackgroundThemeBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                        x:Name="LoginBorder"
                                        Background="{ThemeResource MyForegroundThemeBrush}"
                                        CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:ConnectionId='5'
                x:Name="CancelBtn"
                Width="100"
                Height="35"
                Margin="20,15"
                Background="{ThemeResource MyForegroundThemeBrush}"
                                    
                Content="Cancel"
                Foreground="{ThemeResource MyBackgroundThemeBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                        x:Name="LoginBorder"
                                        Background="{ThemeResource MyForegroundThemeBrush}"
                                        CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <TextBlock x:ConnectionId='3'
            x:Name="mess"
            FontSize="15"
            Foreground="Red"
            TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>

