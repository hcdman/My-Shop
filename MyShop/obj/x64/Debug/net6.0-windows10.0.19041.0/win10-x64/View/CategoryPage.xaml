<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.CategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Margin="20,20,0,20"
            Style="{StaticResource PageTitleStyle}"
            Text="Category" />
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:ConnectionId='11'
                        Name="orderNameTextBox"
                        Width="300"
                        Height="30"
                        Background="{ThemeResource MyBlockBackgroundThemeBrush}"
                        PlaceholderText="Category Name"
                        TextWrapping="Wrap" Text="{Binding keyword, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    <Button x:ConnectionId='12' Margin="10,0"               >Search</Button>
                </StackPanel>
            </Grid>
            <Button x:ConnectionId='9'
                Grid.Column="1"
                Margin="0,0,10,0"
                Background="{ThemeResource MyBlockBackgroundThemeBrush}"
                                       >
                Add
            </Button>
            <Button x:ConnectionId='10'
            Grid.Column="2"
            Margin="0,0,10,0"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
                                >    
                Import
            </Button>
        </Grid>

        <!--  Data of category  -->
        <Grid Grid.Row="2" VerticalAlignment="Top">
            <Grid
                Width="800"
                Height="400"
                Margin="20,5,20,20"
                Background="{ThemeResource MyBlockBackgroundThemeBrush}"
                CornerRadius="10">
                <controls:DataGrid x:ConnectionId='5'
                    x:Name="CustomerDataGrid"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding categories}">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Width="300"
                            Binding="{Binding maloai}"
                            CanUserResize="False"
                            ElementStyle="{StaticResource DataGridTextStyles}"
                            Header="ID" />
                        <controls:DataGridTextColumn
                            Width="300"
                            Binding="{Binding tenloai}"
                            CanUserResize="False"
                            ElementStyle="{StaticResource DataGridTextStyles}"
                            Header="Name" />

                        <controls:DataGridTemplateColumn
                            CanUserResize="False"
                            Header="Operations"
                            IsReadOnly="True">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:ConnectionId='7'
                                            Margin="5,0,0,0"
                                                              
                                            Tag="{Binding maloai}">
                                            <Image Width="16" Source="ms-appx:///Icons/edit.png" />
                                        </Button>
                                        <Button x:ConnectionId='8'
                                            Margin="5,0,0,0"
                                                              
                                            Tag="{Binding maloai}">
                                            <Image Width="16" Source="ms-appx:///Icons/delete.png" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>
        </Grid>

        <!--  Pagination  -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    TextAlignment="Center">
                    Category per page
                </TextBlock>
                <TextBox x:ConnectionId='4'
                    Width="10"
                    Height="30"
                    Margin="10,0"
                                             
                    Text="{Binding _rowsPerPage}"
                    TextAlignment="Center" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Margin="10,0,0,0"
                Orientation="Horizontal">
                <Button x:ConnectionId='2' Width="80" Margin="10,0"             >
                    Previous
                </Button>
                <TextBlock
                    Height="30"
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    TextAlignment="Center">
                 <Run Text="{Binding _currentPage}"/>/<Run Text="{Binding _totalPages}"/>
                </TextBlock>
                <Button x:ConnectionId='3' Width="80" Margin="10,0"              >
                    Next
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

