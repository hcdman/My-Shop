<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="500"
            Height="600"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
            CornerRadius="10">
            <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Add Customer" />
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Name" />
                    <TextBox
                        Grid.Row="1"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Address" />
                    <TextBox
                        Grid.Row="3"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="4"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Phone number" />
                    <TextBox
                        Grid.Row="5"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="6"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Date of Birth" />
                    <CalendarDatePicker Grid.Row="7" />
                    <TextBlock
                        Grid.Row="8"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Email" />
                    <TextBox
                        Grid.Row="9"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="10"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Date of Registration" />
                    <CalendarDatePicker Grid.Row="11" />
                </Grid>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='3'
                        x:Name="AddBtn"
                        Width="100"
                        Height="35"
                        Margin="20,15"
                        Background="{ThemeResource MyForegroundThemeBrush}"
                        Content="Add"
                        Foreground="{ThemeResource MyBackgroundThemeBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="LoginBorder"
                                                Background="{ThemeResource MyForegroundThemeBrush}"
                                                CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:ConnectionId='4'
                        x:Name="CancelBtn"
                        Width="100"
                        Height="35"
                        Margin="20,15"
                        Background="{ThemeResource MyForegroundThemeBrush}"
                        Content="Cancel"
                        Foreground="{ThemeResource MyBackgroundThemeBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="LoginBorder"
                                                Background="{ThemeResource MyForegroundThemeBrush}"
                                                CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <TextBlock x:ConnectionId='2'
                    x:Name="messageTextBlock"
                    FontSize="15"
                    Foreground="Red"
                    Text="Error"
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>

