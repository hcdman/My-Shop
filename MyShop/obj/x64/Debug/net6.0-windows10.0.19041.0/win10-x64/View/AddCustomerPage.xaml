<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border
            Width="500"
            Height="625"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
            CornerRadius="10">
            <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Add Customer" />
                <Grid x:ConnectionId='3' VerticalAlignment="Center" Name="form">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="ID" />
                    <TextBox
                        Grid.Row="1"
                        Width="450"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1"
                        Text="{Binding makh, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Fullname" />
                    <TextBox
                        Grid.Row="3"
                        Width="450"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1"
                        Text = "{Binding hoten, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    <TextBlock
                        Grid.Row="4"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Address" />
                    <TextBox
                        Grid.Row="5"
                        Width="450"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" 
                        Text="{Binding dchi, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    <TextBlock
                        Grid.Row="6"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Tel" />
                    <TextBox
                     Width="450"
                     Padding="10,5"
                       HorizontalAlignment="Left"
                       BorderThickness="0,0,0,1" 
                   Grid.Row="7"
                   Text="{Binding sodt, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    <TextBlock
                        Grid.Row="8"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Date of Birth" />
                    <CalendarDatePicker x:ConnectionId='7'
                  DateFormat="{}{day.integer}/{month.integer}/{year.full}"  Name="DateofBirth"
                     Grid.Row="9" />

                    <TextBlock
                        Grid.Row="10"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Email"/>
                    <TextBox
                Width="450"
                Padding="10,5"
                 HorizontalAlignment="Left"
                BorderThickness="0,0,0,1" 
                Grid.Row="11"
                 Text="{Binding email, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>


                    <TextBlock
                        Grid.Row="12"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Date of Registration"/>
                    <CalendarDatePicker x:ConnectionId='8' Name="RegistrationCalendar"
                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                    Grid.Row="13" />

                </Grid>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='5'
                        x:Name="AddBtn"
                        Width="100"
                        Height="35"
                        Margin="25,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Add"
                        CornerRadius="10" 
                                            />
                    <Button x:ConnectionId='6'
                        x:Name="CancelBtn"
                        Width="100"
                        Height="35"
                        Margin="25,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Back"
                        CornerRadius="10" 
                                               />
                </StackPanel>
                <TextBlock x:ConnectionId='4'
                    x:Name="messageTextBlock"
                    FontSize="15"
                    Foreground="Red"
                    Text=""
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
        <ProgressBar x:ConnectionId='2' Grid.Row="1" x:Name="loading" Width="500" Background="Transparent"  IsIndeterminate="{Binding isShowProgressBar}" Height="20" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>

