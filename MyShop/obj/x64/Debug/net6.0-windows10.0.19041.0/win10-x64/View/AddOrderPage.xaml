<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.View.AddOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}">

    <Grid>
        <Border 
          Width="auto"
          Height="auto"
          Margin="20,48,20,20"
          Background="{ThemeResource MyBlockBackgroundThemeBrush}"
          CornerRadius="10">
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                  Grid.Row="0"
                  Margin="0,10,0,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  FontSize="25"
                  FontWeight="Bold"
                  Text="Add Order" />
                <Grid Grid.Row="1">
                    <StackPanel
                      Grid.Column="0"
                      Margin="20,20,50,0"
                      Orientation="Vertical">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                              Grid.Row="0"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontWeight="Medium"
                              Text="Order ID" />
                            <TextBox
                              Grid.Row="1"
                              Width="350"
                              Padding="0,5"
                              HorizontalAlignment="Left"
                              BorderThickness="0,0,0,1"
                             />
                            <TextBlock
                              Grid.Row="2"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontWeight="Medium"
                              Text="Customer Name" />
                            <TextBox
                              Grid.Row="3"
                              Width="350"
                              Padding="0,5"
                              HorizontalAlignment="Left"
                              BorderThickness="0,0,0,1"
                               />
                            <TextBlock
                              Grid.Row="4"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontWeight="Medium"
                              Text="Products" />
                            <TextBox
                              Grid.Row="5"
                              Width="350"
                              Padding="0,5"
                              HorizontalAlignment="Left"
                              BorderThickness="0,0,0,1"
                               />

                            <TextBlock
                              Grid.Row="6"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontWeight="Medium"
                              Text="Quantity" />
                            <TextBox
                              Grid.Row="7"
                              Width="350"
                              Padding="0,5"
                              HorizontalAlignment="Left"
                              BorderThickness="0,0,0,1"
                             />
                            <TextBlock
                              Grid.Row="8"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontWeight="Medium"
                              Text="Date" />
                            <CalendarDatePicker PlaceholderText="Date order" Grid.Row="9" />
                        </Grid>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel
                      Grid.Row="0"
                      HorizontalAlignment="Center"
                      Orientation="Horizontal">
                        <Button x:ConnectionId='3'
                          x:Name="AddBtn"
                          Width="100"
                          Height="35"
                          Margin="20,0,20,0"
                                           
                          Content="Add"
                          CornerRadius="10" />
                        <Button x:ConnectionId='4'
                          x:Name="CancelBtn"
                          Width="100"
                          Height="35"
                          Margin="20,0,20,0"
                          Content="Cancel"
                          CornerRadius="10" 
                                              />
                    </StackPanel>
                    <TextBlock x:ConnectionId='2'
                      x:Name="messageTextBlock"
                      Grid.Row="1"
                      Margin="0,20,0,0"
                      FontSize="15"
                      Foreground="Red"
                      Text="{Binding Mess, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      TextAlignment="Center" />

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>

