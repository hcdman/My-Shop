<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.AddOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="500"
            Height="600"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
            CornerRadius="10">
            <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Add Order" />
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Order ID" />
                    <TextBox
                        Grid.Row="1"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Customer Name" />
                    <TextBox
                        Grid.Row="3"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="4"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Products" />
                    <TextBox
                        Grid.Row="5"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />

                    <TextBlock
                        Grid.Row="6"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Quantity" />
                    <TextBox
                        Grid.Row="7"
                        Width="450"
                        Padding="0,5"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,1" />
                    <TextBlock
                        Grid.Row="8"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        FontWeight="Medium"
                        Text="Date" />
                    <CalendarDatePicker
                        Grid.Row="9"
                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                        PlaceholderText="Date order" />
                </Grid>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button x:ConnectionId='3'
                        x:Name="AddBtn"
                        Width="100"
                        Height="35"
                        Margin="25,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                                         
                        Content="Add"
                        CornerRadius="10" />
                    <Button x:ConnectionId='4'
                        x:Name="CancelBtn"
                        Width="100"
                        Height="35"
                        Margin="25,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                                            
                        Content="Cancel"
                        CornerRadius="10" />
                </StackPanel>
                <TextBlock x:ConnectionId='2'
                    x:Name="messageTextBlock"
                    Grid.Row="1"
                    Margin="0,40,0,0"
                    FontSize="15"
                    Foreground="Red"
                    Text="{Binding Mess, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>

