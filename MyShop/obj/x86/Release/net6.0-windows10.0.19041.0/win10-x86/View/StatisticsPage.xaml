<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="using:MyShop.ViewModel"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=ViewModel:StatisticViewModel}"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Margin="20,10,0,50"
            Style="{StaticResource PageTitleStyle}"
            Text="Statistics" />
        <!--  Filter  -->
        <Grid Grid.Row="0" Margin="{StaticResource PageContentMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Margin="10,0"
                Orientation="Horizontal">
                <Button x:ConnectionId='11' Margin="0"                   >-</Button>
                <Button x:ConnectionId='12' Margin="0,0,10,0"                 >+</Button>
            </StackPanel>
            <TextBlock x:ConnectionId='6'
                Name="showFilter"
                Grid.Column="1"
                Margin="0,20,0,20"
                Style="{StaticResource PageTitleStyle}"
                TextAlignment="Left" />
            <StackPanel
                Grid.Column="2"
                Margin="10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button x:ConnectionId='7'
                    Name="ViewProduct"
                    Margin="2"
                                     >
                    View Product Stastics
                </Button>
                <Button x:ConnectionId='8'
                    Name="Week"
                    Margin="2"
                                     >
                    Week
                </Button>
                <Button x:ConnectionId='9'
                    Name="Month"
                    Margin="2"
                                      >
                    Month
                </Button>
                <Button x:ConnectionId='10'
                    Name="Year"
                    Margin="2"
                    Background=" #FF00FF00 "
                                     >
                    Year
                </Button>
            </StackPanel>
        </Grid>

        <!--  Statistics  -->
        <Grid Grid.Row="1" CornerRadius="10">
            <chart:SfCartesianChart x:ConnectionId='4'
                Name="chart"
                Margin="10,0,10,0"
                HorizontalAlignment="Center"
                CornerRadius="10"
                FontWeight="Bold"
                Header="Revenue"
                PaletteBrushes="{ThemeResource customBrushes}"
                PlotAreaBorderThickness="3">
                <chart:SfCartesianChart.Resources>
                    <ResourceDictionary>
                        <DataTemplate x:Key="dataLabelTemplate">
                            <Ellipse
                                Width="10"
                                Height="10"
                                Fill="White"
                                Stroke="#4a4a4a"
                                StrokeThickness="2" />
                        </DataTemplate>
                        <Style x:Key="lineStyle" TargetType="Path">
                            <Setter Property="StrokeDashArray" Value="10,7,5" />
                            <Setter Property="Stroke" Value="Black" />
                        </Style>
                    </ResourceDictionary>
                </chart:SfCartesianChart.Resources>
                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis
                        Header="Time"
                        PlotOffsetEnd="10"
                        PlotOffsetStart="10" />
                </chart:SfCartesianChart.XAxes>
                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis
                        Header="Revenue (tr)"
                        Interval="1000"
                        PlotOffsetStart="30" />
                </chart:SfCartesianChart.YAxes>
                <chart:SfCartesianChart.Legend>
                    <chart:ChartLegend
                        IconHeight="15"
                        IconVisibility="Visible"
                        IconWidth="15"
                        ToggleSeriesVisibility="True" />
                </chart:SfCartesianChart.Legend>
                <chart:SfCartesianChart.Series>

                    <!--  Binding data is here - data show in cl  -->
                    <chart:ColumnSeries
                        IsVisibleOnLegend="True"
                        ItemsSource="{Binding Revenues}"
                        Label="Column"
                        ShowDataLabels="True"
                        XBindingPath="Year"
                        YBindingPath="Counts">

                        <chart:ColumnSeries.DataLabelSettings>
                            <chart:CartesianDataLabelSettings
                                ConnectorHeight="20"
                                ConnectorLineStyle="{StaticResource lineStyle}"
                                Position="Outer"
                                ShowConnectorLine="True" />
                        </chart:ColumnSeries.DataLabelSettings>
                    </chart:ColumnSeries>

                    <!--  Binding data is here - data show in line  -->
                    <chart:LineSeries
                        IsVisibleOnLegend="True"
                        ItemsSource="{Binding Revenues}"
                        Label="Line"
                        ShowDataLabels="True"
                        XBindingPath="Year"
                        YBindingPath="Counts">
                        <chart:LineSeries.DataLabelSettings>
                            <chart:CartesianDataLabelSettings ContentTemplate="{StaticResource dataLabelTemplate}" />
                        </chart:LineSeries.DataLabelSettings>
                    </chart:LineSeries>
                </chart:SfCartesianChart.Series>

            </chart:SfCartesianChart>
        </Grid>

        <!--  Profit and revenue button  -->
        <StackPanel
            Grid.Row="2"
            Margin="5,5,20,20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button x:ConnectionId='2'
                Name="Revenue"
                Background=" #FF00FF00 "
                                    >
                Revenue
            </Button>
            <Button x:ConnectionId='3' Name="Profit"                    >Profit</Button>
        </StackPanel>
    </Grid>
</Page>

