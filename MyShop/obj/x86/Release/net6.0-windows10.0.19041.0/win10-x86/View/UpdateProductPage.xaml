<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.View.UpdateProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource MyBackgroundThemeBrush}"
    Foreground="{ThemeResource MyForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="800"
            Height="auto"
            Margin="20,30,20,20"
            Background="{ThemeResource MyBlockBackgroundThemeBrush}"
            CornerRadius="10">
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Detail Product" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Margin="20,0,50,0"
                        Orientation="Vertical">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="ID" />
                            <TextBox
                                Grid.Row="1"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Name" />
                            <TextBox
                                Grid.Row="3"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="4"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Price" />
                            <TextBox
                                Grid.Row="5"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="6"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Cost" />
                            <TextBox
                                Grid.Row="7"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Cost, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="8"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="% Discount" />
                            <TextBox
                                Grid.Row="9"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="10"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Manufacter" />
                            <TextBox
                                Grid.Row="11"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Manufactuer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="12"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Quantity" />
                            <TextBox
                                Grid.Row="13"
                                Width="350"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                BorderThickness="0,0,0,1"
                                Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="14"
                                Margin="0,10"
                                HorizontalAlignment="Left"
                                FontWeight="Medium"
                                Text="Type" />
                            <ComboBox x:ConnectionId='5'
                                x:Name="TypeComboBox"
                                Grid.Row="15"
                                Padding="10,5"
                                DisplayMemberPath="tenloai"
                                ItemsSource="{Binding AllType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="tenloai" />
                        </Grid>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Image Width="300" Source="{Binding Image, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <Button
                            Margin="0,10"
                            HorizontalAlignment="Center"
                            Command="{Binding LoadImage}">
                            Import Image
                        </Button>

                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button x:ConnectionId='3'
                            x:Name="AddBtn"
                            Width="100"
                            Height="35"
                            Margin="20,0,20,0"
                                                   
                            Content="Update"
                            CornerRadius="10" />
                        <Button x:ConnectionId='4'
                            x:Name="CancelBtn"
                            Width="100"
                            Height="35"
                            Margin="20,0,20,0"
                                                   
                            Content="Cancel"
                            CornerRadius="10" />
                    </StackPanel>
                    <TextBlock x:ConnectionId='2'
                        x:Name="messageTextBlock"
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        FontSize="15"
                        Foreground="Red"
                        Text="{Binding Mess, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        TextAlignment="Center" />

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>

